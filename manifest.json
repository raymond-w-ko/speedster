{
  "manifest_version": 2,
  "name": "speedster",
  "version": "1.0.0",
  "description": "An extension to help you speed-read using Rapid Serial Visual Presentation (RSVP) like Spritz",
  "homepage_url": "https://github.com/raymond-w-ko/speedster",
  "content_scripts": [
    {
      "js": ["contentscript.js"],
      "matches": ["http://*/*", "https://*/*", "file:///*"]
    }
  ],
  "web_accessible_resources": [
    "speedster.js",
    "speedster.css"
  ],
  "browser_action": {
    "default_title": "Click here to Speed-Read"
  },
  "permissions": [
    "activeTab"
  ]
}
